import java.io.BufferedReader
import java.io.BufferedWriter
import java.io.InputStreamReader
import java.io.OutputStreamWriter
fun main() {
    val br = BufferedReader(InputStreamReader(System.`in`))
    val bw = BufferedWriter(OutputStreamWriter(System.out))
    val s = br.readLine()
    var reversStr = ""
    var answer = 0
    var finish = false
    var subStringEnd = 1
    fun check(st: Int, ed: Int, str: String) {
        if (st >= ed) {
            answer = str.length
            finish = true
            return
        }
        if (str[st] == str[ed]) return check(st + 1, ed - 1, str)
        else {
            reversStr = s.substring(0, subStringEnd).reversed()
            subStringEnd += 1
            return
        }
    }
    while (true) {
        if (finish) break
        val res = s + reversStr
        check(0, res.length - 1, res)
    }
    bw.write("$answer")
    bw.flush()
    bw.close()
}
